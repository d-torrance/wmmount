#! /bin/sh -e

system_wmmount=/etc/system.wmmount

case "$1" in
  remove)
    [ -x /usr/bin/update-menus ] && update-menus
  ;;
  purge)
    [ -e ${system_wmmount} ] && rm ${system_wmmount}
  ;;
  upgrade)
    # nothing to do
  ;;
  failed-upgrade)
    # this is an upgrade, and it has failed. What can fail?
    exit 1
  ;;
  abort-install)
  ;;
  abort-upgrade)
  ;;
  disappear)
  ;;
  *)
    echo "postrm called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

exit 0


